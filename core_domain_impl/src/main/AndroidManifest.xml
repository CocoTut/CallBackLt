<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.cherepanovk.core_domain_impl">
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <application>
        <receiver
            android:name=".notifications.NotificationActionsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="@string\action_call" />
            </intent-filter>

        </receiver>
        <receiver
            android:name=".notifications.NotificationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="@string/intent_callback_notification_service" />
            </intent-filter>
        </receiver>

        <service
            android:name=".notifications.NotificationService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service
            android:name=".callservices.CallListenerService"
            android:enabled="true"
            android:exported="false"/>

    </application>

</manifest>